        <TextBlock x:Name="txtTitlePubs" FontSize="60" HorizontalAlignment="Left" Margin="88.933,168.026,0,0" TextWrapping="Wrap" Text="Pubs" VerticalAlignment="Top" Width="200" Height="82" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
