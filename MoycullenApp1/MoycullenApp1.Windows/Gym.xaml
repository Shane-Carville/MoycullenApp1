    mc:Ignorable="d">

    <Grid Background="ForestGreen">
        <Button x:Name="butGymBack" FontSize="20" Content="Back" HorizontalAlignment="Left" Margin="36,576,0,0" VerticalAlignment="Top" Height="63" Width="113" Click="butGymBack_Click"/>
