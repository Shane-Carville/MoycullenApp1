        <Image x:Name="image" HorizontalAlignment="Left" Height="121" Margin="476,68,0,0" VerticalAlignment="Top" Width="437" Source="Assets/MoyLogoGym.png" Stretch="Fill"/>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="173" Margin="698,542,0,0" VerticalAlignment="Top" Width="658" Source="Assets/MoyFit.jpg" Stretch="Fill"/>
        <TextBlock x:Name="txtGymDec" FontSize="20" HorizontalAlignment="Left" Margin="83,68,0,0" TextWrapping="Wrap" Text="MoyFitness located above Supervalu is the moycullen local gym you don't need a membership and the staff there are qualified personal trainers who will help you get the body you want." VerticalAlignment="Top" Width="214" Height="238"/>
        <TextBlock x:Name="txtGymPhone" FontSize="20" HorizontalAlignment="Left" Margin="334,269,0,0" TextWrapping="Wrap" Text="Phone Number - 091299744
                   Instagram - MoyFitness
                   Twitter - @moyFitness" VerticalAlignment="Top" Height="134" Width="283"/>
        <TextBlock x:Name="txtGymEmail" FontSize="20" HorizontalAlignment="Left" Margin="775,296,0,0" TextWrapping="Wrap" Text="Email - moyFitness@gmail.com" VerticalAlignment="Top" Height="70" Width="333"/>

    </Grid>
